{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "src",
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./public/",
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "public"]
}
